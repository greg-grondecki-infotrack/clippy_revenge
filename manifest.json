{
  "name": "Clippy 2: Revenge of the Clip",
  "short_name": "Clippy",
  "version": "1.2",
  "manifest_version": 2,
  "description": "Finally, Clippy comes to Chrome! Get help browsing the web.",
  "permissions": [
    "tabs", "http://*/*", "https://*/*", "identity", "identity.email"
  ],
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "background": {
    "scripts": ["clippy-revenge.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["clippy.css"],
      "js": [
        "jquery-1.8.2.min.js", 
        "clippy.js", 
        "sounds-mp3.js", 
        "agent.js", 
        "clippy-revenge-content.js",
        "queues.js"
        ]
    }
  ],
  "web_accessible_resources": [
    "map.png"
  ]
}
